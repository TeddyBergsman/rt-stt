<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.rt-stt.daemon</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/rt-stt</string>
        <string>--socket</string>
        <string>/tmp/rt-stt.sock</string>
        <string>--config</string>
        <string>/usr/local/etc/rt-stt/config.json</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/usr/local/var/log/rt-stt.log</string>
    
    <key>StandardErrorPath</key>
    <string>/usr/local/var/log/rt-stt.error.log</string>
    
    <key>WorkingDirectory</key>
    <string>/usr/local/share/rt-stt</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
    
    <key>ProcessType</key>
    <string>Interactive</string>
    
    <key>Nice</key>
    <integer>-5</integer>
    
    <key>ThrottleInterval</key>
    <integer>30</integer>
    
    <key>UserName</key>
    <string>root</string>
    
    <key>GroupName</key>
    <string>wheel</string>
    
    <key>InitGroups</key>
    <true/>
    
    <key>AbandonProcessGroup</key>
    <true/>
</dict>
</plist>
